<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/vfr_setting_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/ipAddressEditTxt"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="185dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="172.23.23.103"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/portEditTxt"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="144dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="80"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/userAccountEditTxt"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="103dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="H.S"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/userPWDEditTxt"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="62dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="123456"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/tabletIDEditTxt"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="21dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="5"
        android:textSize="18dp"/>




    <EditText
        android:id="@+id/thermalIpEditTxt"
        android:layout_marginLeft="290dp"
        android:layout_width="215dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="185dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="192.168.4.1"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/alertTempEditTxt"
        android:layout_marginLeft="560dp"
        android:layout_width="90dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="185dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="37.5"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/httpCMDEditTxt"
        android:layout_marginLeft="395dp"
        android:layout_width="425dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="140dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="37.5"
        android:textSize="18dp"/>




    <EditText
        android:id="@+id/changePWDEditTxt"
        android:layout_marginLeft="455dp"
        android:layout_width="305dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="35dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="12345"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/changePWDAgainEditTxt"
        android:layout_marginLeft="455dp"
        android:layout_width="305dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="-7dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="12345"
        android:textSize="18dp"/>


    <FrameLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
        android:layout_gravity="bottom|center_horizontal|right"
        android:background="@drawable/vfr_confirm"
        android:id="@+id/confirmBtn"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

        <Button
            android:layout_gravity="bottom|center_horizontal|left"
            android:background="@drawable/vfr_back"
            android:id="@+id/backBtn"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="100dp"/>


    </FrameLayout>

</FrameLayout>