        android:textSize="18dp"/>

    <EditText
        android:id="@+id/portEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="144dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Edge port"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/userAccountEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="103dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Edge Account"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/userPWDEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="62dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Edge Password"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/tabletIDEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="21dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Edge Tablet ID"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/kkkk"
        android:layout_marginLeft="-350dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="-21dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#A8A7A7"
        android:visibility="gone"
        android:text="Match Scoreï¼š"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/matchScoreEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="-222dp"
        android:layout_width="300dp"
        android:maxLines="1"
        android:inputType="text"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="-21dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Match Score"
        android:textSize="18dp"/>



    <EditText
        android:id="@+id/thermalIpEditTxt"
        android:layout_marginLeft="-55dp"
        android:layout_width="210dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="194dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="Thermometer ip address"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/alertTempEditTxt"
        android:layout_marginLeft="220dp"
        android:layout_width="90dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:text="37.5"
        android:layout_marginBottom="195dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="alert Temp"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/standard_mode"
        android:layout_gravity="center"
        android:layout_marginBottom="88dp"
        android:layout_marginRight="234dp"
        android:background="#19b3cc"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <ImageView
        android:id="@+id/thermo_mode"
        android:layout_gravity="center"
        android:layout_marginBottom="88dp"
        android:layout_marginRight="-92dp"
        android:background="#19b3cc"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <EditText
        android:id="@+id/httpCMDEditTxt"
        android:visibility="gone"
        android:layout_marginLeft="391dp"
        android:layout_width="423dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="87dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="http url"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/changePWDEditTxt"
        android:layout_marginLeft="-153dp"
        android:layout_width="210dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="-31dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="new password"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/changePWDAgainEditTxt"
        android:layout_marginLeft="174dp"
        android:layout_width="210dp"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginBottom="-33dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColorHint="#686868"
        android:textColor="#FFFFFF"
        android:hint="new password again"
        android:textSize="18dp"/>


    <FrameLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
        android:layout_gravity="bottom|center_horizontal|right"
        android:background="@drawable/vfr_confirm"
        android:id="@+id/confirmBtn"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

        <Button
            android:layout_gravity="bottom|center_horizontal|left"
            android:background="@drawable/vfr_back"
            android:id="@+id/backBtn"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="100dp"/>


    </FrameLayout>

</FrameLayout>