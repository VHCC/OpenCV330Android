<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_frame_20210304"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/detectView"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="560dp"
        android:layout_height="420dp">

        <org.opencv.android.JavaCameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/thermo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

        <acl.siot.opencvwpc20191007noc.view.overLay.OverLayLinearLayout
            android:id="@+id/circleOverlay"
            android:visibility="gone"
            app:frame_color="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <acl.siot.opencvwpc20191007noc.view.overLay.OverLayLinearLayout
            android:id="@+id/circleOverlay_green"
            app:frame_color="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_marginTop="0dp"
        android:layout_marginRight="218dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="330dp"
        android:layout_height="330dp">

        <ImageView
            android:id="@+id/img1"
            android:background="@drawable/vfr_selector_upload_image_frame"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="0dp"
            android:padding="1dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </FrameLayout>

    <FrameLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detectStatus"
            android:visibility="gone"
            android:text="Pass"
            android:textColor="#2db100"
            android:textSize="56sp"
            android:gravity="center"
            android:layout_marginBottom="200dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="100dp">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/faceCapture"
            android:gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="400dp">
        </ImageView>
    </FrameLayout>

    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Edition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#bbc4d1" />

    </LinearLayout>

    <FrameLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_gravity="bottom|center_horizontal|left"
            android:background="@drawable/vfr_back_to_home"
            android:visibility="gone"
            android:id="@+id/cancelDetectBtn"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:layout_gravity="top|center_horizontal|right"
            android:background="@drawable/ic_gear_20210303"
            android:id="@+id/adminSettingBtn"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <ImageView
            android:layout_gravity="top|center_horizontal|right"
            android:background="@drawable/ic_disconnect_20210303"
            android:id="@+id/thermoConnectStatus"
            android:layout_marginRight="115dp"
            android:layout_marginTop="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <Button
            android:layout_gravity="top|center_horizontal|left"
            android:background="@drawable/ic_home_20210303"
            android:id="@+id/adminHomeBtn"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="100dp"
            android:layout_width="66dp"
            android:layout_height="66dp"/>

        <ImageView
            android:id="@+id/faceStatus"
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/vfr_offline"
            android:layout_marginRight="380dp"
            android:layout_marginBottom="30dp"
            android:layout_width="78dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/tempStatusBg"
            android:background="#00000000"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="28dp"
            android:textColor="@color/white"
            android:layout_width="239dp"
            android:layout_height="140dp"/>

        <!--     sign  -->
        <TextView
            android:id="@+id/tempDetected"
            android:layout_gravity="center|left"
            android:text=""
            android:textSize="42sp"
            android:layout_marginLeft="262dp"
            android:layout_marginBottom="145dp"
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:layout_height="56dp"/>

        <TextView
            android:id="@+id/tempUnit"
            android:layout_gravity="center|left"
            android:text="Â°C"
            android:textSize="24sp"
            android:layout_marginLeft="330dp"
            android:layout_marginBottom="70dp"
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:layout_height="56dp"/>

        <ImageView
            android:id="@+id/maskStatus"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_mask_detect"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="80dp"
            android:layout_width="233dp"
            android:layout_height="196dp"/>

        <ImageView
            android:id="@+id/thermoStatus"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_temp_detect"
            android:layout_marginLeft="142dp"
            android:layout_marginBottom="145dp"
            android:layout_width="233dp"
            android:layout_height="196dp"/>

        <TextView
            android:id="@+id/time_left"
            android:gravity="top|right"
            android:textColor="#ffffff"
            android:text="YYYY-MM-DD"
            android:layout_marginRight="273dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <TextView
            android:id="@+id/time_right"
            android:gravity="top|right"
            android:textColor="#ffffff"
            android:text="--:--"
            android:layout_marginRight="196dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <!--   msg     -->
        <TextView
            android:id="@+id/msg_big"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Please get closer to the screen for testing"
            android:layout_marginTop="440dp"
            android:textSize="48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <TextView
            android:id="@+id/msg_small"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Temperature detection distance 20 cm"
            android:layout_marginTop="540dp"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <Button
            android:id="@+id/reCheckBtn"
            android:visibility="gone"
            android:layout_gravity="center|right"
            android:background="@drawable/selector_re_check_bg"
            android:text="Re-check"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="141dp"
            android:layout_marginTop="80dp"
            android:layout_width="233dp"
            android:layout_height="196dp"/>

        <Button
            android:id="@+id/confirmBtn"
            android:layout_gravity="center|right"
            android:background="@drawable/selector_confirm_bg"
            android:text="Confirm"
            android:enabled="false"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="142dp"
            android:layout_marginBottom="145dp"
            android:layout_width="233dp"
            android:layout_height="196dp"/>
        
        <!-- App Edition -->
        <TextView
            android:id="@+id/appVersion"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="1.0"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:textColor="#bbc4d1" />

        <!-- CopyRight-->
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_edit_text_margin_bottom_top"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="Advantech 2020 WPC"
            android:textColor="#bbc4d1" />

        <!-- prompt -->
        <TextView
            android:id="@+id/promptTv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:textSize="36dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Advantech 2020 WPC"
            android:textColor="#bbc4d1"/>

    </FrameLayout>

</FrameLayout>