<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#064A7E"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="800dp"
    android:layout_height="500dp">

    <ImageView
        android:layout_gravity="top"
        android:src="@drawable/ic_intersection_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:text="DISCONNECT"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="Please confirm that you would like to disconnect\n  from the server. \n Select ' Confirm ' to disconnect from the server, \n or ' Cancel ' to abort the operation."
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/cancelBtn"
            android:background="#1A6AA7"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/confirmBtn"
            android:background="#229CBB"
            android:textSize="20dp"
            android:text="Summit"
            android:textColor="#FFFFFF"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>


</LinearLayout>