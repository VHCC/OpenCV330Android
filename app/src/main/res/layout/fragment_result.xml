<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/result_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="5dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="100dp"
        android:id="@+id/resultImage"
        android:background="@drawable/selector_upload_image_frame"
        android:layout_width="400dp"
        android:layout_height="400dp">

    </ImageView>

    <ImageButton
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/selector_result_tap_to_finish"
        android:id="@+id/scanBadgeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageButton>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Edition -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_edit_text_margin_left_right_double"
            android:layout_marginLeft="@dimen/common_edit_text_margin_left_right_double"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/common_edit_text_margin_left_right_double"
            android:layout_marginRight="@dimen/common_edit_text_margin_left_right_double"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#bbc4d1" />

        <!-- CopyRight-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_edit_text_margin_bottom_top"
            android:gravity="center_horizontal|center_vertical"
            android:text="Advantech 2020 WPC"
            android:textColor="#bbc4d1" />

    </LinearLayout>

</FrameLayout>