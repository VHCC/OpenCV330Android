<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detectBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/vfr_detection_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/detectView"
        android:layout_marginTop="58dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="710dp"
        android:layout_height="420dp">

        <org.opencv.android.JavaCameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/thermo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

        <acl.siot.opencvwpc20191007noc.view.overLay.OverLayLinearLayout
            android:id="@+id/circleOverlay"
            android:visibility="gone"
            app:frame_color="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <acl.siot.opencvwpc20191007noc.view.overLay.OverLayLinearLayout
            android:id="@+id/circleOverlay_green"
            app:frame_color="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_marginTop="0dp"
        android:layout_marginRight="218dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="330dp"
        android:layout_height="330dp">

        <ImageView
            android:id="@+id/img1"
            android:background="@drawable/vfr_selector_upload_image_frame"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="0dp"
            android:padding="1dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </FrameLayout>

    <FrameLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detectStatus"
            android:visibility="gone"
            android:text="Pass"
            android:textColor="#2db100"
            android:textSize="56sp"
            android:gravity="center"
            android:layout_marginBottom="200dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="100dp">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/abnormal_1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abnormal_1_viewCache"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="100dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_1_viewCache_thermo"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="112dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_1_tempStatusBg"
            android:background="#0b7e5d"
            android:layout_gravity="center|right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="127dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/abnormal_1_tempStatus"
            android:layout_gravity="center|right"
            android:text="38.70"
            android:textSize="32sp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="123dp"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="56dp"/>

        <TextView
            android:id="@+id/abnormal_1_recognizedTime"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Timestamp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="37dp"
            android:textSize="16dp"
            android:layout_width="230dp"
            android:layout_height="50dp">
        </TextView>

        <ImageView
            android:id="@+id/abnormal_1_maskStatus"
            android:layout_gravity="center|right"
            android:src="@drawable/vfr_mask_ng"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="70dp"
            android:layout_width="60dp"
            android:layout_height="34dp"/>
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/abnormal_2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abnormal_2_viewCache"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="-45dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_2_viewCache_thermo"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="-31dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_2_tempStatusBg"
            android:background="#0b7e5d"
            android:layout_gravity="center|right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-15dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/abnormal_2_tempStatus"
            android:layout_gravity="center|right"
            android:text="38.70"
            android:textSize="32sp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-21dp"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="56dp"/>

        <TextView
            android:id="@+id/abnormal_2_recognizedTime"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Timestamp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-108dp"
            android:textSize="16dp"
            android:layout_width="230dp"
            android:layout_height="50dp">
        </TextView>

        <ImageView
            android:id="@+id/abnormal_2_maskStatus"
            android:layout_gravity="center|right"
            android:src="@drawable/vfr_mask_ng"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="-70dp"
            android:layout_width="60dp"
            android:layout_height="34dp"/>
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/abnormal_3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abnormal_3_viewCache"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="-190dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_3_viewCache_thermo"
            android:layout_gravity="center|right"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="-175dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/abnormal_3_tempStatusBg"
            android:background="#0b7e5d"
            android:layout_gravity="center|right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-160dp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/abnormal_3_tempStatus"
            android:layout_gravity="center|right"
            android:text="38.70"
            android:textSize="32sp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-166dp"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="56dp"/>

        <TextView
            android:id="@+id/abnormal_3_recognizedTime"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Timestamp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-253dp"
            android:textSize="16dp"
            android:layout_width="230dp"
            android:layout_height="50dp">
        </TextView>

        <ImageView
            android:id="@+id/abnormal_3_maskStatus"
            android:layout_gravity="center|right"
            android:src="@drawable/vfr_mask_ng"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="-220dp"
            android:layout_width="60dp"
            android:layout_height="34dp"/>
    </FrameLayout>


    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Edition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#bbc4d1" />

    </LinearLayout>

    <FrameLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_gravity="bottom|center_horizontal|left"
            android:background="@drawable/vfr_back_to_home"
            android:visibility="gone"
            android:id="@+id/cancelDetectBtn"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:layout_gravity="top|center_horizontal|right"
            android:background="#00000000"
            android:id="@+id/adminSettingBtn"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:layout_width="66dp"
            android:layout_height="66dp"/>

        <ImageView
            android:id="@+id/faceStatus"
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/vfr_offline"
            android:layout_marginRight="380dp"
            android:layout_marginBottom="30dp"
            android:layout_width="78dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/tempStatusBg"
            android:background="#00000000"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="28dp"
            android:textColor="@color/white"
            android:layout_width="239dp"
            android:layout_height="140dp"/>

        <TextView
            android:id="@+id/tempStatus"
            android:layout_gravity="center|left"
            android:text=""
            android:textSize="48sp"
            android:layout_marginLeft="86dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:layout_height="56dp"/>

        <TextView
            android:id="@+id/recognizedTime"
            android:gravity="center|left"
            android:textColor="#ffffff"
            android:text="Timestamp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="360dp"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <ImageView
            android:id="@+id/maskStatus"
            android:layout_gravity="bottom|left"
            android:visibility="gone"
            android:src="@drawable/vfr_mask_ng"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="115dp"
            android:layout_width="150dp"
            android:layout_height="84dp"/>

        <ImageView
            android:id="@+id/thermoStatus"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/vfr_online"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="245dp"
            android:layout_marginBottom="34dp"
            android:layout_width="78dp"
            android:layout_height="25dp"/>
        
        <!-- App Edition -->
        <TextView
            android:id="@+id/appVersion"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="1.0"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:textColor="#bbc4d1" />

        <!-- CopyRight-->
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_edit_text_margin_bottom_top"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="Advantech 2020 WPC"
            android:textColor="#bbc4d1" />

        <!-- prompt -->
        <TextView
            android:id="@+id/promptTv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:textSize="36dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Advantech 2020 WPC"
            android:textColor="#bbc4d1"/>

    </FrameLayout>

</FrameLayout>